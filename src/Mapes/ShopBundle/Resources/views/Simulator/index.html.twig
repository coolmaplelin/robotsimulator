{% extends 'MapesShopBundle::layout.html.twig' %}

{% block content %}
	<section>
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<h1>Robot Simulator</h1>
					<h6 class="text-center author">Author - Maple Lin</h6>					
				</div>
			</div>
			
			<div class="row">
				<div class="col-md-12">
				
					<div class="table-responsive">
						 <table class="inputtable table table-bordered">
							<thead>
								<tr><th>Input</th><th>Example</th><th>Line-by-line annotation</th></tr>
							</thead>
							<tbody>
								<tr>
									<td>
										<div class="form-group">
											  <textarea name="input" class="form-control"  rows="5"></textarea>
										</div>
										<div class="form-group">
											  <button class="btn btn-primary btn-action" type="submit">Action</button>
										</div>
									</td>
									<td>
										5 5 <br/>
										1 2 N <br/>
										LMLMLMLMM <br/>
										3 3 E <br/>
										MLMLMRMRMRRM <br/>
									</td>
									<td>
										Grid is size 5 x 5 <br/>
										1st Robot’s initial position (1,2) and heading (N)<br/>
										1st Robot’s set of commands<br/>
										2nd Robot’s initial position (3,3) and heading (E)<br/>
										2nd Robot’s set of commands<br/>
									</td>
								</tr>
							</tobdy>
						 </table>
						 <table class="outputtable table table-bordered">
							<thead>
								<tr><th>Output</th><th>Example</th><th>Line-by-line annotation</th></tr>
							</thead>
							<tbody>
								<tr>
									<td class="outputtext">
										&nbsp;
									</td>
									<td>
										1 1 N <br/>
										3 1 W <br/>
									</td>
									<td>
										1st Robot’s final position and heading <br/>
										2nd Robot’s final position and heading <br/>
									</td>
								</tr>
							</tobdy>
						 </table>
					</div>
				</div>
			</div>
			
			<div class="row">
				<div class="col-md-12 text-center error-msg">
						
				</div>
			</div>
			
			<div class="row">
				<div class="col-md-12 text-center">
					<div class="form-group">
						<!-- <button class="btn btn-play" type="button">Play</button> -->
						<button class="btn btn-success btn-inipos" type="button">Show Initial Position</button>
						<button class="btn btn-success btn-finalpos" type="button">Show Final Position</button>
					</div>
				</div>
			</div>
			
			<div class="row">
				<div class="col-md-12"">
					<div class="table-responsive">
						 <table id="matrix" class="table">
						 </table>
					</div>
				</div>
			</div>
			
				
			</div>
		</div>
	</section>
	

{% endblock %}
        
    
{% block javascipt %}
	{{ parent() }}
	<script src="{{ asset('bundles/mapescms/js/robot.js') }}"></script>
{% endblock %}